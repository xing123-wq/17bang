@model ViewModel.Category._InputModel

@using (Html.BeginForm("_New", "Category"))
{
    <div class="modal-body">
        <div class="form-group">
            <label>父系列：</label>
            @Html.DropDownListFor(m => m.ParentId,
                new SelectList(Model._Items, "Id", "Title"),
                "--------------",
                new { @class = "form-control", zyf_categories = string.Empty })
        </div>
        <div class="form-group">
            <label>名称：（* 必填）</label>
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "不能为空，25字符以内", zyf_new_category_name = string.Empty })
            @Html.ValidationMessageFor(m => m.Title, null, new { style = "color:red" })
        </div>
        <div class="form-group">
            <label>描述：</label>
            @Html.TextAreaFor(m => m.Body, new { @class = "form-control", placeholder = "255个字符以内，简单描述系列的目的、内容等" })
            @Html.ValidationMessageFor(m => m.Body, null, new { style = "color:red" })
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default" data-dismiss="modal">关闭</button>
        <button type="button" class="btn btn-primary" zyf-new-category-submit zyf-submit-once>提交</button>
    </div>
}

