<div zyf-chat-items-container class="clearfix chat-items-container">
    <div class="small text-muted">
        <span>@Model.PublishTime</span>
        <span data-toggle="tooltip" title="" data-original-title="">
            <a href="/User/@Model.ChatAuthorId" zyf-show-contact="6">
                @Model.AuthorName
            </a>
        </span>
        <input zyf-chat-author-id type="hidden" id="@Model.ChatAuthorId">
        <a href="/FAQ/Credit#" data-toggle="tooltip" title="" class="text-muted" style="position: relative; top: -1px;" data-original-title="初级教师">
            <span>④</span>
        </a>
    </div>
    <div>
        <input zyf-chat-item-id type="hidden" value="@Model.Id">
        <span zyf-chat-item-content>@Model.Content</span>
    </div>
</div>