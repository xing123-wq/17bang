@model ViewModel.Ad.IndexModel
@{
    Layout = null;
}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm())
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title"><span class="fa fa-buysellads"></span> 申请免费广告位</h4>
                </div>
                <div class="modal-body">
                    <input data-val="true" data-val-number="字段 Position 必须是一个数字。" data-val-required="Position 字段是必需的。" id="Position" name="Position" type="hidden" value="2">
                    <div class="form-group">
                        <a zyf-ad-delete="" class="text-warning pull-right"><span class="fa fa-remove"></span> 删除</a>
                        <label>之前用过的广告：</label>
                        @Html.DropDownListFor(a => a.AD, ViewData["SelectADList"] as IList<SelectListItem>, new { @class = "", zyf_Ad_listItem = "" })
                    </div>
                    <ul class="hide" zyf-ad-in-widget-history-url="">
                    </ul>
                    <section style="padding:10px 20px; margin-bottom:20px;" class="yellow-highlight" zyf-ad-content-container="">
                        <div class="text-right checkbox">
                            <label>
                                <input data-val="true" data-val-required="Edit 字段是必需的。" id="Content_Edit" name="Content.Edit" type="checkbox" value="true" onclick="disable()"><input name="Content.Edit" type="hidden" value="false"> 修改
                                <script>
                                    function disable() {

                                        document.getElementById("user.name").disabled = "";
                                        document.getElementById("user.number").disabled = "";

                                    }</script>
                            </label>
                        </div>
                        <div class="form-group">
                            <label>文字内容：（* 必填）</label>
                            @Html.TextBoxFor(a => a.Title, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Title, "", new { @class = "field-validation-valid" })
                        </div>
                        <div class="form-group">
                            <label>链接：（* 必填）</label>
                            @Html.TextBoxFor(a => a.Url, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Url, "", new { @class = "field-validation-valid" })
                        </div>
                    </section>
                    <input type="hidden" zyf-adinwidget-free-parenturl="" name="parentUrl" value="http://17bang.ren/Problem?excludeCanceled=true&amp;excludeRewarded=true">
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary loading" value="提交" zyf-submit-once="">
                    <input type="reset" class="btn btn-default" value="重填">
                </div>
            </div><!-- /.modal-content -->
        }
    </div>
</div>
