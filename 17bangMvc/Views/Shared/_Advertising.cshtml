<script>
    //取多个name进行字体闪烁
    function roplcolor() {
        var free = document.getElementsByName('bay');
        for (var i = 0; i < free.length; i++) {
            if (free[i].style.color === 'blue') {
                free[i].style.color = '#8a6d3b';
            } else {
                free[i].style.color = 'blue';
            }
        }
    }
    setInterval(roplcolor, 1000);
</script>
