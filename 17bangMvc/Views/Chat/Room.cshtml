@{
    Layout = null;
}
@model ViewModel.Chat.ChatRoomModel
@foreach (var item in Model.ChatRooms)
{
    <div zyf-chat-item="" data-id="6" class="chat-item" style="padding-top: 40px;">
        <a zyf-chat-reply-btn="" id="@item.Id" class="btn btn-default btn-sm left">
            <span>回复</span>
        </a>
        <input zyf-chat-author-id="" type="hidden" id="@item.ChatAuthorId">
        <div zyf-chat-item="" class="clearfix chat-items-container">
            <div class="small text-muted">
                <span>2020/8/7 20:36:22</span>
                <span data-toggle="tooltip" title="" data-original-title="">
                    <a href="/User/@item.ChatAuthorId" zyf-show-contact="6">
                        @item.AuthorName
                    </a>
                </span>
                <a href="/FAQ/Credit#" data-toggle="tooltip" title="" class="text-muted" style="position: relative; top: -1px;" data-original-title="初级教师">
                    <span>④</span>
                </a>
            </div>
            <div>
                <input zyf-chat-item-id="" type="hidden" value="@item.Id">
                <span zyf-chat-item-content="">@item.Content</span>
            </div>
        </div>
        @if (item.Reply != null)
        {
            <span class="bg-info">
                <span class="fa fa-at"></span>
                <span data-toggle="tooltip" title="" data-original-title="">
                    <a href="/User/@item.Reply.ChatAuthorId" zyf-show-contact="2" style="color:cornflowerblue">
                        @item.Reply.AuthorName
                    </a>
                </span>
                <a href="/FAQ/Credit#" data-toggle="tooltip" title="" class="text-muted" style="position:relative; top:-1px;" data-original-title="初级教师">
                    <span>④</span>
                </a>
            </span>
            <br>
            <span class="text-muted bg-info"><span class="fa fa-quote-left"></span> @item.Reply.Content</span>
            <br>
        }
    </div>
}