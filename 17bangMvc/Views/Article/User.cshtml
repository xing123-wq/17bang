@model ViewModel.Articles.User.IndexModel
@{
    Layout = "~/Views/Shared/Layout/_DualColumn.cshtml";
}
@section Description
{
    <title>@ViewData["title"]</title>
}
<div class="container body-content">
    <div class="col-md-8">
        <div>
            <span class="lead"><span class="fa fa-map-signs"></span>文章路径：</span>
            <a class="text-muted" href="/Article">全部</a> /
            <span style="font-size:16px;" class="text-primary" zyf-show-contact="@Model.Author.Id">@(Model.Author.Name)的文章</span>
        </div>
        <hr>
        @foreach (var item in Model.Articles)
        {
            <div style="margin-bottom:20px; padding-bottom:10px; border-bottom: 1px dashed #ccc;">
                <div class="clearfix">
                    <div>
                        <small class="text-muted" zyf-datetime="">
                            <span>
                                <span class="fa fa-calendar"></span> <span zyf-can-hide="">@item.PublishTime</span>
                            </span>
                        </small>

                        <span class="pull-right">
                            作者：<a href="/Article/User-@item.Author.Id">@item.Author.Name</a>

                            <a href="/Article/Edit/@item.Id" class="" style="margin-left:14px;" zyf-article-edit="" data-author-id="7"><span class="fa fa-pencil-square-o"></span> 修改</a>
                        </span>
                    </div>
                    <h4>
                        <a href="/Article/@item.Id">@item.Title</a>

                    </h4>
                    <p style="word-break:break-all; clear:both; margin-top:8px;">
                        @Html.Raw(item.Body)
                        <a href="/Article/@item.Id" data-toggle="tooltip" title="" data-original-title="全文">……</a>
                    </p>
                    <div>
                        <label><span class="fa fa-tags"></span>  关键字：</label>
                        @foreach (var keywords in item.Keywords)
                        {
                            <span class="badge">@keywords.Keyword.Name</span>
                        }
                    </div>
                    <div class="pull-right appraise-status">
                        <a class="appraise-status-item text-info" href="/Article/45#comments">
                            <span class="fa fa-comments-o"></span>
                            <span class="visible-sm-inline visible-md-inline visible-lg-inline">评论：</span>6
                        </a>
                        <a class="appraise-status-item text-success" href="/Article/Appraise?id=45&amp;direction=1" zyf-vote="" data-author-id="7">
                            <span class="fa fa-thumbs-o-up"></span>
                            <span class="visible-sm-inline visible-md-inline visible-lg-inline">赞：</span>
                            <span zyf-votes-count="">26</span>
                        </a>
                        <a class="appraise-status-item text-muted" href="/Article/Appraise?id=45&amp;direction=-1" zyf-vote="" data-author-id="7">
                            <span class="fa fa-thumbs-o-down"></span>
                            <span class="visible-sm-inline visible-md-inline visible-lg-inline">踩：</span>
                            <span zyf-votes-count="">48</span>
                        </a>

                    </div>
                </div>
            </div>
        }
        @Html.Partial("_Pager", Model.Articles)
    </div>
</div>
