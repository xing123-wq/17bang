@page
@model _17bnag.Article.UserModel
@{
    //ViewData["Title"] = "User";
    Layout = "~/Pages/Layout/_DualColumn.cshtml";
}
@section Description{

}
<h2>User:@PageContext.RouteData.Values["id"]</h2>

@for (int i = 1; i < 5; i++)
{
    <div style="text-align:center;">
        @for (int j = 1; j <= i * 2 - 1; j++)
        {
            string color = i % 2 == 0 ? "red" : "blue";
            <span style="color:@color">i</span>
        }
    </div>
}
<nav>
    <ul class="pager">
        <li class="previous">
            <a href="/Task/History/Month/17/2019/7">«上月</a>
        </li>
        <li style="padding:5px 14px; display:inline-block;">2019年8月</li>
        <li class="next">
            <a href="/Task/History/Month/17/2019/9">下月»</a>
        </li>
    </ul>
</nav>
<table class="table table-striped" id="month">
    <tbody>
        <tr>
            @{
                IEnumerable<string> chars = new string[] { "一", "二", "三", "四", "五", "六", "七" };
            }
            @foreach (var item in chars)
            {
                <th>@item</th>
            }
        </tr>
        @for (int j = 1; j < 6; j++)
        {
            <tr>
                @for (int i = 1; i < 8; i++)
                {
                    <td>
                        <span class="fa fa-remove" aria-hidden="true" title="2019年06月03日" zyf-task-show-history="" data-month="6" data-taskday-id="611"></span>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>