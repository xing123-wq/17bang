@page
@model _17bnag.Pages.Notices.indexModel
@{
    Layout = "~/Pages/Layout/_DualColumn.cshtml";
}
@section Description
{
    <title>@ViewData["title"]</title>
}
<div class="container body-content">



    <h2 class="page-header"><span class="fa fa-list-alt "></span> 系统通知</h2>
    <div>
        <div class="row visible-sm visible-md visible-lg">
            <div class="col-sm-1">状态</div>
            <div class="col-sm-3">过期时间</div>
            <div class="col-sm-8">内容</div>
        </div>
        <hr class="thin visible-sm visible-md visible-lg">
        @foreach (var item in Model.Notitces)
        {
            <div class="row">
                <div class="col-xs-3 col-sm-1">
                    有效期
                </div>
                <div class="col-xs-9 col-sm-3">
                    <span>生效：</span><small>@item.StartDate</small> <br>
                    <span>过期：</span><small>@item.DateClosed</small>
                </div>
                <div class="col-xs-12 col-sm-8">
                    <p>
                        <a href="/Notice/Edit?@item.Id" class="" style="margin-right:10px;" >
                            <span class="fa fa-pencil-square-o" data-toggle="tooltip"  data-original-title="修改"></span>
                        </a>
                        <b>@item.Body</b>
                    </p>
                    <p></p>
                </div>
            </div>
            <hr class="thin dashed">
        }
    </div>
</div>
